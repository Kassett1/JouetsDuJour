{% extends 'base.html.twig' %}
{% block head %}
  <title>Jouets du Jour – Comparatifs & Bons Plans Jouets et Jeux</title>

  <meta name="description" content="Explorez tous nos articles thématiques sur les jouets, jeux de société, franchises, idées cadeaux, et bons plans. Trouvez l’inspiration selon vos envies." />

  <meta name="robots" content="index, follow" />
  <meta name="keywords" content="articles jouets, franchises enfants, idées cadeaux, bons plans, guides jouets, comparatifs, Jouets du Jour" />

  <link rel="canonical" href="https://jouetsdujour.com/jouets" />
{% endblock %}

{% block javascripts %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Sélection complète : jouets, jeux de société, gaming, jeux éducatifs et livres",
  "url": "https://jouetsdujour.com/articles",
  "inLanguage": "fr-FR",
  "image": "https://jouetsdujour.com/images/articles-cover.webp",
  "description": "Tous nos articles thématiques : guides, tops et sélections autour des jouets, jeux de société, gaming, jeux éducatifs et livres.",

  "mainEntity": {
    "@type": "ItemList",
    "itemListOrder": "https://schema.org/ItemListUnordered",
    "numberOfItems": {{ articles|length }},
    "itemListElement": [
      {% for a in articles %}
      {
        "@type": "Article",
        "headline": "{{ a.nom }}",
        "url": "{{ a.lien }}",
        "image": "{{ a.image }}"{% if a.date %},
        "dateModified": "{{ a.date|date('c') }}"{% endif %}
      }{{ not loop.last ? ',' : '' }}
      {% endfor %}
    ]
  }
}
</script>

{% endblock %}

{% block
stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/home.css') }}"/>
{% endblock %}
{% block body %}


	<main class="main">
		<section class="section section--top-ventes">
			<h1 class="main__title">Articles</h1>

			<ul class="section__list">
				{% for article in articles %}
					<li class="section__item">
						<a href="{{ article.getLien() }}">
							<h3 class="section__item-title">{{ article.getNom() }}</h3>

							<div class="section__item-content">
								<img src="{{ article.getImage() }}" alt="{{ article.getNom() }}" class="section__item-image"/>
								<div class="section__item-details">
									<p class="section__item-description">
										{{ article.getDescription() }}
									</p>

									<p class="section__item-description">
										Mise à jour :
										{{ article.getDate()|date('d/m/Y') }}
									</p>
								</div>
							</div>
						</a>
					</li>
				{% endfor %}
			</ul>

		</section>

		<section class="section section--promotions main__header">
			<h2 class="section__title" style="text-align: center;">Découvrez d'autres catégories</h2>

			<ul class="categories">
				{% for categorie in categories %}
					<li class="categories__item" style="background-image: url('{{ categorie.getImage() }}');">
						{% if categorie.getSlug() == 'gaming' %}
							<a href="{{ path('categorie_gaming', {slug: categorie.getSlug()}) }}" class="categories__link">
							{% elseif categorie.getSlug() == 'jouets' %}
								<a href="{{ path('categorie_jouets', {slug: categorie.getSlug()}) }}" class="categories__link">
								{% else %}
									<a href="{{ path('categorie_autres', {slug: categorie.getSlug()}) }}" class="categories__link">
									{% endif %}
									<strong>{{ categorie.getNom() }}</strong>
								</a>
							</li>
						{% endfor %}
					</li>
				</ul>
			</section>

			<p class="main__intro-text" style="text-align: center;">Dernière mise à jour : {{ date }}</p>

		</main>
	{% endblock %}
