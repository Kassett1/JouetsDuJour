{% block javascripts %}
	 <script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "WebPage",
	  "name": "Sélection de jeux de société : classiques, coopératifs, éducatifs et stratégiques",
	  "mainEntity": {
	    "@type": "Product",
	    "name": "Jeux de société pour tous : famille, enfants et amateurs de stratégie",
	    "image": "https://reperehub.com/images/logo_reperehub.webp",
