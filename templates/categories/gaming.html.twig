{% extends 'base.html.twig' %}
{% block head %}
  <title>Gaming : Consoles, Jeux & Accessoires | Jouets du Jour</title>

  <meta name="description" content="Retrouvez tout l'univers du gaming : jeux vidéo, consoles, accessoires et périphériques. Découvrez nos sélections pour optimiser votre expérience de jeu." />
  
  <meta name="robots" content="index, follow" />
  <meta name="keywords" content="gaming, jeux vidéo, consoles, accessoires gaming, manettes, périphériques, PC gamer, Xbox, PlayStation, Switch" />

  <link rel="canonical" href="https://jouetsdujour.com/gaming" />
{% endblock %}

{% block javascripts %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Gaming : jeux vidéo, consoles et accessoires",
  "url": "https://jouetsdujour.com/gaming",
  "inLanguage": "fr-FR",
  "image": "https://jouetsdujour.com/images/gaming-cover.webp",
  "description": "Jeux vidéo, consoles de jeux, casques gaming et accessoires pour joueurs passionnés.",

  "mainEntity": {
    "@type": "ItemList",
    "itemListOrder": "https://schema.org/ItemListUnordered",
    "numberOfItems": {{ offerCount|default(0) }},
    "itemListElement": [
      {% for p in produits %}
      {
        "@type": "Product",
        "name": "{{ p.nom }}",
        "image": "{{ p.image }}",
        "url": "{{ p.lien }}",
        "offers": {
          "@type": "Offer",
          "price": {{ p.prix ?? 0 }},
          "priceCurrency": "EUR",
          "availability": "https://schema.org/InStock"
        }
      }{{ not loop.last ? ',' : '' }}
      {% endfor %}
    ]
  },

  "offers": {
    "@type": "AggregateOffer",
    "offerCount": {{ offerCount|default(0) }},
    "lowPrice": {{ lowPrice|default(0) }},
    "highPrice": {{ highPrice|default(0) }},
    "priceCurrency": "EUR"
  }
}
</script>


{% endblock %}

{% block
    stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/categories.css') }}"/>
{% endblock %}
