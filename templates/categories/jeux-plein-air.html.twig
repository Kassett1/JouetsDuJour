{% extends 'base.html.twig' %}
{% block head %}
  <title>Jeux de Plein Air : Sélections & Idées Ludiques | Jouets du Jour</title>

  <meta name="description" content="Jeux de plein air pour enfants : activités ludiques, sportives et créatives à partager dehors. Parfaits pour des journées actives et amusantes." />
  <meta name="robots" content="index, follow" />
  <meta name="keywords" content="jeux de plein air, jeux extérieurs enfants, activités extérieures, jeux sportifs, jeux ludiques, jardin, été, jeux famille" />

  <link rel="canonical" href="https://jouetsdujour.com/jeux-plein-air" />
{% endblock %}

{% block javascripts %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Jeux de plein air pour enfants",
  "url": "https://jouetsdujour.com/jeux-plein-air",
  "inLanguage": "fr-FR",
  "image": "https://jouetsdujour.com/images/jeux-plein-air-cover.webp",
  "description": "Trouvez les meilleurs jeux de plein air pour enfants, parfaits pour encourager le sport, la créativité et le jeu en extérieur.",

  "mainEntity": {
    "@type": "ItemList",
    "itemListOrder": "https://schema.org/ItemListUnordered",
    "numberOfItems": {{ offerCount|default(0) }},
    "itemListElement": [
      {% for p in produits %}
      {
        "@type": "Product",
        "name": "{{ p.nom }}",
        "image": "{{ p.image }}",
        "url": "{{ p.lien }}",
        "brand": { "@type": "Brand", "name": "LEGO" },
        "offers": {
          "@type": "Offer",
          "price": {{ p.prix ?? 0 }},
          "priceCurrency": "EUR",
          "availability": "https://schema.org/InStock"
        }
      }{{ not loop.last ? ',' : '' }}
      {% endfor %}
    ]
  },

  "offers": {
    "@type": "AggregateOffer",
    "offerCount": {{ offerCount|default(0) }},
    "lowPrice": {{ lowPrice|default(0) }},
    "highPrice": {{ highPrice|default(0) }},
    "priceCurrency": "EUR"
  }
}
</script>

{% endblock %}

{% block
    stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/categories.css') }}"/>
{% endblock %}
{% block body %}
	<main class="category-page">
		<h1 class="category-page__title">Jeux de Plein Air : Sélections & Idées Ludiques</h1>

		<section class="products-section">
			<h2 class="products-section__title">Jeux de plein air tendances</h2>
			<p class="products-section__description">
				Découvrez les
				<strong>jeux de plein air tendances</strong>, parfaits pour s’amuser en extérieur et profiter du grand air. Ces
				<strong>produits populaires</strong>
				incluent des jeux sportifs, des accessoires amusants ou encore des équipements pour le jardin. Trouvez l’activité idéale pour rendre chaque moment en extérieur inoubliable !
			</p>


			<ul class="products">
				{% for produit in produits %}
					<li class="products__item">
						<div class="products__icons">
							{% for tag in produit.getTag() %}
								{% if tag.getNom() == 'Choix Amazon' %}
									<i class="ri-heart-fill products__icon products__icon--amazon-choice"></i>
								{% elseif tag.getNom() == 'Top Ventes' %}
									<i class="ri-medal-fill products__icon products__icon--top-sales"></i>
								{% elseif tag.getNom() == 'Promo' %}
									<i class="ri-price-tag-3-fill products__icon products__icon--promo"></i>
								{% endif %}
							{% endfor %}
						</div>

						<img src={{ produit.getImage() }} alt="{{ produit.getNom()|length > 50 ? produit.getNom()|slice(0, 47) ~ '...' : produit.getNom() }}" class="products__image">

						<h3 class="products__title">{{ produit.getNom()|split(' ')|slice(0, 5)|join(' ') }}</h3>
						<p class="products__description">{{ produit.getDescription()|slice(0, 150) ~ (produit.getDescription()|length > 150 ? '...' : '') }}</p>

						<div class="products__pricing">
							{% if produit.getPromo() %}
								<p class="products__promo">-{{ produit.getPromo() }}%</p>
							{% endif %}
							<p class="products__price">{{ produit.getPrix() }}€</p>
						</div>

						<a href="{{ produit.getLien() }}" class="products__link">
							Voir l'offre
							<i class="ri-amazon-fill products__amazon-logo"></i>
						</a>
					</li>
				{% endfor %}
			</ul>
		</section>

